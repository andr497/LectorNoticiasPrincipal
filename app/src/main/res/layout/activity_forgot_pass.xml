<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.lectornoticias.ForgotPass" android:orientation="vertical">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:id="@+id/pb_forgotPass"/>

    <com.airbnb.lottie.LottieAnimationView
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="verify_email.json"
            android:layout_below="@id/pb_forgotPass"
            android:layout_marginTop="0dp" android:layout_marginBottom="16dp" android:id="@+id/icon_lottie"
            android:layout_width="match_parent"/>

    <EditText
            android:id="@+id/edt_Correo"
            android:inputType="textEmailAddress"
            android:hint="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_lottie" android:layout_marginTop="0dp"/>


    <Button
            android:id="@+id/btn_send_pass"
            android:layout_below="@+id/edtPass"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Restablecer contraseÃ±a"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
