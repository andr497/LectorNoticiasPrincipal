<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearCuenta" android:background="@android:color/holo_blue_light" android:orientation="vertical">
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:id="@+id/Barra"/>
    <TextView
            android:text="Nombre:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:gravity="center"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColorHint="@android:color/black"
            android:id="@+id/ed_nombre"
            android:hint="Nombre" style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:textSize="18sp" android:textStyle="bold|italic"
            android:padding="4sp"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_blue_dark" android:textAllCaps="false"
            android:layout_margin="10dp"
    />
    <TextView
            android:text="Apellido:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:gravity="center"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ed_apellido"
            android:hint="Apellido" style="@style/Base.AlertDialog.AppCompat.Light"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" android:textStyle="bold|italic"
            android:padding="4sp"
            android:textColor="@android:color/black" android:background="@android:color/holo_blue_dark"
            android:layout_margin="10dp"
    />
    <TextView
            android:text="Correo electronico:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:gravity="center"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/ed_correo"
            android:hint="Correo" style="@style/Base.AlertDialog.AppCompat.Light"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" android:textStyle="bold|italic"
            android:textColor="@android:color/black" android:background="@android:color/holo_blue_dark"
            android:padding="4sp"
            android:layout_margin="10dp"
    />
    <TextView
            android:text="ContraseÃ±a:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:gravity="center"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ed_password"
            android:hint="Password" style="@style/Base.AlertDialog.AppCompat.Light"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" android:textStyle="bold|italic"
            android:padding="4sp"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_blue_dark"
            android:layout_margin="10dp"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_crear"
            android:textStyle="bold|italic"
            android:text="Crear" android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/background_light"
            android:layout_margin="10dp"
            />

</LinearLayout>