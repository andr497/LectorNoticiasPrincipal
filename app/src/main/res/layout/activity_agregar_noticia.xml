<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.lectornoticias.AgregarNoticia" android:orientation="vertical">

    <TextView
            android:text="Agregar noticia."
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView12" android:textStyle="bold"
            android:textColor="@android:color/black" android:textSize="30sp" android:layout_margin="10dp"/>
    <TextView
            android:text="Titulo de la noticia:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:textColor="@android:color/black"
            android:textSize="18sp" android:textStyle="bold" android:layout_margin="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ed_titulo" android:layout_margin="10dp"/>
    <TextView
            android:text="Descripcion de la noticia:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView13" android:textStyle="bold"
            android:textColor="@android:color/black" android:textSize="18sp" android:layout_margin="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ed_descripcion" android:layout_margin="10dp"/>
    <TextView
            android:text="Autor:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView16" android:gravity="center"
            android:textSize="18sp" android:textColor="@android:color/black" android:textStyle="bold|italic"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_autor" android:layout_margin="10dp"
            android:gravity="center" android:textColor="@android:color/black" android:textStyle="bold|italic"/>
    <Button
            android:text="Agregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="415dp"
            tools:layout_editor_absoluteX="98dp" android:id="@+id/bt_agregar" android:layout_margin="10dp"/>
</LinearLayout>
